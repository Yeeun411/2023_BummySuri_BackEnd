generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("mysql://34.64.161.193:3306/tigerandeagle")
}

model User {
  id             Int       @id @default(autoincrement())
  accessToken    String    @unique
  klaytn_address String
  NFT_image      String?
  totalPoint     Int
  bettings       Betting[]
  minigames      MiniGame[]
}

model Betting {
  id             Int      @id @default(autoincrement())
  gameType       String   @relation(fields: [gameType], references: [gameType])
  userId         Int      @relation(fields: [userId], references: [id])
  selected       Boolean
  playing        String
  predictedWinner String
  predictedScore String
  bettingPoint   Int
  success        Boolean  @default(false)
  earnedPoint    Int      @default(0)
  totalPoint     Int
  user           User
}

model Game {
  gameType       String   @id
  playing        String
  KoreaScore     Int
  YonseiScore    Int
  bettings       Betting[]
}

model MiniGame {
  id           Int    @id @default(autoincrement())
  userId       Int    @relation(fields: [userId], references: [id])
  results      String
  totalPoint   Int
  user         User
}